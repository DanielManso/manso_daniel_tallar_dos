<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Corkcicle</title>
  <link href="/style/NewStyle/mainStore.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i" rel="stylesheet">
</head>
</head>

<body>


  {{>nav}}

  <section class="header">
    <header class="header__title">

      <h1> COMPRALO TODO</h1>

    </header>
  </section>



  <section class="filterOne">

    <article class="filterOne__options">
      <a href="" class="filterOne__clikCan">
        <article class="filterOne__canten">
          <a href="/store?product__filter=termo"><img src="./imagenesTienda/iconoTermos.png" alt="iconCanten"></a>
        </article>
        <h2>TERMOS</h2>
      </a>
    </article>

    <article class="filterOne__options">
      <a href="" class="filterOne__clikCoo">
        <article class="filterOne__coolers">
          <a href="/store?product__filter=cooler"><img src="./imagenesTienda/iconoMaletas.png" alt="iconCoolers"></a>
        </article>
        <h2>ENFRIADORES</h2>
      </a>
    </article>

    <article class="filterOne__options">
      <a href="" class="filterOne__clikExt">
        <section class="filterOne__extras">
          <a href="/store?product__filter=extras"><img src="./imagenesTienda/iconoExtras.png" alt="iconExtras"> </a>
        </section>
        <h2>EXTRAS</h2>
      </a>
    </article>

    <article class="filterOne__options">
      <a href="" class="filterOne__clikCol">
        <section class="filterOne__collections">
          <a href="/store?product__filter=collection"><img src="./imagenesTienda/iconoColecciones.png" alt="iconCollections"></a>
        </section>
        <h2>COLECCIONES</h2>
      </a>
    </article>

  </section>
  </section>

  <main class="prducts">


    <section class="nameFilter">

      <div class="nameFilter__line"></div>

      <h1 class="nameFilter__title">{{collection}}</h1>
      <div class="nameFilter__line"></div>

    </section>


    <section class="products">

      <section class="product">
        {{#each products}}
        <article class="product__parent">

          <img class="product__image" src="{{product__img}}">
          <h2 class="product__name"> {{product__name}} </h2>
          <a class="product__button" href="/store?product__name={{product__name}}"><button>COMPRAR</button></a>

        </article>
        {{/each}}
      </section>

    </section>



    <section class="return">

      <article class="return__options">
        <a href="" class="return__clik">
          <h3>VOLVER ARRIBA</h3>
          <img src="./imagenesTienda/iconoFlecha.png" alt="return">
        </a>


      </article>

    </section>

    {{>footer}}

  </main>

  <script src="./style/script.js"></script>
</body>

</html>